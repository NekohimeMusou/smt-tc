<section class="details">
  <div class="items-list flexcol">
    <ol class="stat-list">
      {{!-- Weapon Details --}}
      <li class="item flexrow items-header flex-group-center">
        {{!-- Phys Atk / Mag Atk / etc --}}
        <div class="item-prop">{{localize (concat "SMT.skillTypes." system.attackData.attackType)}}</div>

        {{!-- Ammo --}}
        {{#if (eq system.weaponType "gun")}}
        <div class="item-prop">
          {{localize "SMT.skillDetails.ammoCount" count=(ifThen system.ammo.value system.ammo.value "0") max=(ifThen system.ammo.max system.ammo.max "0")}}
        </div>
        {{else}}
        {{#if (eq system.weaponType "grenade")}}
        <div class="item-prop">
          {{localize "SMT.skillDetails.qty" qty=system.qty}}
        </div>
        {{/if}}
        {{/if}}

        {{!-- Potency --}}
        <div class="item-prop">{{localize "SMT.skillDetails.potency"
          potency=(ifThen system.attackData.potency system.attackData.potency "0")}}
        </div>

        {{!-- Affinity --}}
        <div class="item-prop">
          {{localize "SMT.skillDetails.affinity"
           affinity=(localize (concat "SMT.affinities." system.attackData.affinity))}}
        </div>

        {{!-- Target --}}
        <div class="item-prop">{{localize "SMT.skillDetails.target"
          target=(localize (concat "SMT.targets." system.attackData.target))}}
        </div>

           {{!-- TN/Auto --}}
        <div class="item-prop">{{localize "SMT.skillDetails.tn" tn=system.attackData.tn}}</div>
      </li>

      <li class="item items-header">
        <div>{{localize "SMT.itemSheet.effect"}}</div>
      </li>

      {{editor
        system.description
        target="system.description"
        editable=editable
        button=true
      }}
    </ol>
  </div>
</section>
