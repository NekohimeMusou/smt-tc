<section class="item-config">
  <div class="items-list flexcol">
    <ol class="stat-list">
      <li class="item flexrow">
        {{!-- HP/MP Cost | Consume on use? --}}
        <label for="consumeOnUse" class="item-prop">{{localize "SMT.itemSheet.consumeOnUse"}}</label>
        <div class="item-prop">
          <input type="checkbox" id="consumeOnUse" name="system.consumeOnUse" data-dtype="Boolean" {{checked system.consumeOnUse}} />
        </div>

        {{!-- Target --}}
        <label for="target" class="item-prop">{{localize "SMT.itemSheet.target"}}</label>
        <div class="item-prop">
          <select id="target" name="system.target">
            {{selectOptions SMT.targets localize=true selected=system.target}}
          </select>
        </div>

        {{!-- Affinity --}}
        <label for="affinity" class="item-prop">{{localize "SMT.itemSheet.affinity"}}</label>
        <div class="item-prop">
          <select id="affinity" name="system.affinity">
            {{selectOptions SMT.attackAffinities localize=true selected=system.affinity}}
          </select>
        </div>

        {{!-- Potency --}}
        <label for="potency" class="item-prop">{{localize "SMT.itemSheet.potency"}}</label>
        <div class="item-prop">
          <input type="number" id="potency" name="system.potency" value="{{system.potency}}" placeholder="0"
            data-dtype="Number" />
        </div>
      </li>

      <li class="item flexrow">
        {{#if (eq system.affinity "force")}}
        {{!-- Shatter Rate --}}
        <label for="shatterRate" class="item-prop">{{localize "SMT.itemSheet.shatterRate"}}</label>
        <div class="item-prop">
          <input type="number" id="shatterRate" name="system.shatterRate" value="{{system.shatterRate}}" placeholder="50"
            data-dtype="Number" />
        </div>
        {{else}}
        {{!-- Ailment --}}
        <label for="ailment-id" class="item-prop">{{localize "SMT.itemSheet.ailment"}}</label>
        <div class="item-prop">
          <select id="ailment-id" name="system.ailment.id">
            {{selectOptions SMT.ailments localize=true selected=system.ailment.id blank=(localize "SMT.none")}}
          </select>
        </div>

        {{!-- Ailment Rate --}}
        <label for="ailment-rate" class="item-prop">{{localize "SMT.itemSheet.ailmentRate"}}</label>
        <div class="item-prop">
          <input type="number" id="ailmentRate" name="system.ailment.rate" value="{{system.ailment.rate}}"
            placeholder="0" data-dtype="Number" {{ifThen system.ailment.id "" "disabled"}} />
        </div>
        {{/if}}

        {{!-- Roll power? --}}
        <label for="includePowerRoll" class="item-prop">{{localize "SMT.itemSheet.includePowerRoll"}}</label>
        <div class="item-prop">
          <input type="checkbox" id="includePowerRoll" name="system.includePowerRoll" data-dtype="Boolean"
            {{checked system.includePowerRoll}} />
        </div>
      </li>
    </ol>
  </div>
</section>