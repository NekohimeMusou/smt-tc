<section class="item-config">
  <div class="items-list flexcol">
    <ol class="stat-list">
      <li class="item flexrow">
        {{!-- Phys Resist --}}
        <label for="phys-resist" class="item-prop">{{localize "SMT.resist.phys"}}</label>
        <div class="item-prop">
          <input type="number" id="phys-resist" name="system.resist.phys"
           value="{{system.resist.phys}}" placeholder="0" data-dtype="Number" />
        </div>

        {{!-- Mag Resist --}}
        <label for="mag-resist" class="item-prop">{{localize "SMT.resist.mag"}}</label>
        <div class="item-prop">
          <input type="number" id="mag-resist" name="system.resist.mag"
           value="{{system.resist.mag}}" placeholder="0" data-dtype="Number" />
        </div>

        {{!-- Price --}}
        <label for="price" class="item-prop">{{localize "SMT.itemSheet.price"}}</label>
        <div class="item-prop">
          <input type="number" id="price" name="system.price"
           value="{{system.price}}" placeholder="0" data-dtype="Number" />
        </div>
      </li>

      <li class="item items-header">
        <div>{{localize "SMT.itemSheet.slots"}}</div>
      </li>

      <li class="item flexrow">
        <label for="head-slot" class="item-prop">{{localize "SMT.equipSlots.head"}}</label>
        <input type="checkbox" id="head-slot" name="system.slots.head"
          data-dtype="Boolean" {{checked system.slots.head}} />

        <label for="torso-slot" class="item-prop">{{localize "SMT.equipSlots.torso"}}</label>
        <input type="checkbox" id="torso-slot" name="system.slots.torso"
          data-dtype="Boolean" {{checked system.slots.torso}} />

        <label for="legs-slot" class="item-prop">{{localize "SMT.equipSlots.legs"}}</label>
        <input type="checkbox" id="legs-slot" name="system.slots.legs"
          data-dtype="Boolean" {{checked system.slots.legs}} />
      </li>

      <li class="item items-header">
        <div>{{localize "SMT.itemSheet.effect"}}</div>
      </li>

      {{editor
        system.description
        target="system.description"
        editable=editable
        button=true
      }}
    </ol>
  </div>
</section>