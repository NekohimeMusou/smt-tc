<section class="armor">
  <div class="items-list flexcol">
    <ol class="item-list">
      <li class="item flexrow items-header">
        {{!-- Name --}}
        <div class="item-name flex2">{{localize "TYPES.Item.armor"}}</div>
        {{!-- Equipped --}}
        <div>{{localize "SMT.actorSheet.equipped"}}</div>
        {{!-- Phys Resist --}}
        <div>{{localize "SMT.resist.phys"}}</div>
        {{!-- Mag Resist --}}
        <div>{{localize "SMT.resist.mag"}}</div>
        {{!-- Slot --}}
        <div>{{localize "SMT.itemSheet.slot"}}</div>
        <div class="item-controls">
          <a class="item-control item-create" title="{{localize "SMT.sheet.newItem"}}" data-item-type="armor">
            <i class="fas fa-plus"></i> {{localize "SMT.sheet.addItem"}}</a>
        </div>
      </li>

      {{#each armor}}
      <li class="item item-entry flexrow flex-group-center flex-between" data-item-id="{{id}}">
        {{!-- Name --}}
        <a class="item-name flex2">
          <div class="item-image">
            <img src="{{img}}" title="{{name}}" width="24" height="24" />
          </div>
          {{name}}
        </a>

        {{!-- Equipped --}}
        <div class="item-prop">
          <input type="checkbox" class="item-field-toggle" data-field-id="equipped" data-dtype="Boolean"
            {{checked system.equipped}} />
        </div>

        {{!-- Phys Resist --}}
        <div class="item-prop">{{ifThen system.resist.phys system.resist.phys "0"}}</div>

        {{!-- Mag Resist --}}
        <div class="item-prop">{{ifThen system.resist.mag system.resist.mag "0"}}</div>

        {{!-- Slot --}}
        <div class="item-prop">{{localize (concat "SMT.armorSlots." system.slot)}}</div>

        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize "SMT.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize "SMT.sheet.deleteItem"}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</section>