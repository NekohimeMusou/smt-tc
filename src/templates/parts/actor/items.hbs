<section class="inventoryItems">
  <div class="items-list flexcol">
    <ol class="item-list">
      <li class="item flexrow items-header">
        {{!-- Name --}}
        <div class="item-name flex2">{{localize "SMT.itemTypes.inventoryItem"}}</div>
        {{!-- Qty --}}
        <div>{{localize "SMT.actorSheet.qty"}}</div>
        {{!-- Price --}}
        <div>{{localize "SMT.actorSheet.price"}}</div>

        <div class="item-controls">
          <a class="item-control item-create" title="{{localize "SMT.sheet.newItem"}}" data-item-type="inventoryItem">
            <i class="fas fa-plus"></i> {{localize "SMT.sheet.addItem"}}</a>
        </div>
      </li>

      {{#each inventoryItems}}
      <li class="item item-entry flexrow flex-group-center flex-between" data-item-id="{{id}}">
        {{!-- Name --}}
        <a class="item-name flex2">
          <div class="item-image">
            <img src="{{img}}" title="{{name}}" width="24" height="24" />
          </div>
          {{name}}
        </a>
        {{!-- Qty --}}
        <div class="item-prop">{{system.qty}}</div>
        {{!-- Price --}}
        <div class="item-prop">{{system.price}}</div>

        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize "SMT.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize "SMT.sheet.deleteItem"}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</section>