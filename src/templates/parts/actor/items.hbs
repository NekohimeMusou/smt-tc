<section class="inventory-items">
  <div class="items-list flexcol flexlarge">
    <ol class="item-list">
      <li class="item flexrow items-header">
        {{!-- Name --}}
        <div class="item-name flex2">{{localize "TYPES.Item.inventoryItem"}}</div>
        {{!-- Qty --}}
        <div>{{localize "SMT.actorSheet.qty"}}</div>
        {{!-- Potency --}}
        <div>{{localize "SMT.itemSheet.potency"}}</div>
        {{!-- Total Power --}}
        <div>{{localize "SMT.itemSheet.power"}}</div>
        {{!-- Target --}}
        <div>{{localize "SMT.itemSheet.target"}}</div>
        {{!-- Element --}}
        <div>{{localize "SMT.itemSheet.affinity"}}</div>
        {{!-- Ailment --}}
        <div>{{localize "SMT.actorSheet.ailment"}}</div>

        <div class="item-controls">
          <a class="item-control item-create" title="{{localize "SMT.sheet.newItem"}}" data-item-type="skill">
            <i class="fas fa-plus"></i> {{localize "SMT.sheet.addItem"}}</a>
        </div>
      </li>

      {{#each inventoryItems}}
      <li class="item item-entry flexrow flex-group-center flex-between" data-item-id="{{id}}">
        {{!-- Name --}}
        <a class="item-name flex3 item-roll">
          <div class="item-image">
            <img src="{{img}}" title="{{name}}" width="24" height="24" />
          </div>
          {{name}}
        </a>

        {{!-- Qty --}}
        <div class="item-prop">{{system.qty}}</div>

        {{!-- Potency --}}
        <div class="item-prop">
          {{#if (and system.hasAttack system.hasPowerRoll)}}
          {{system.attackData.potency}}
          {{else}}
          —
          {{/if}}
        </div>
        {{!-- Total Power --}}
        <div class="item-prop">
          {{#if (and system.hasAttack system.hasPowerRoll)}}
          {{system.attackData.totalPower}}
          {{else}}
          —
          {{/if}}
        </div>

        {{!-- Target --}}
        <div class="item-prop">
          {{#if system.hasAttack}}
          {{localize (concat "SMT.targets." system.attackData.target)}}
          {{else}}
          —
          {{/if}}
        </div>

        {{!-- Element --}}
        <div class="item-prop">
          {{#if system.hasAttack}}
          {{localize (concat "SMT.affinities." system.attackData.affinity)}}
          {{else}}
          —
          {{/if}}
        </div>

        {{!-- Ailment --}}
        <div class="item-prop">
        {{#if system.hasAttack}}
          {{#if system.attackData.ailment.id}}
            {{localize (concat "SMT.ailments." system.attackData.ailment.id)}} {{system.attackData.ailment.rate}}%
            {{else}}
            —
            {{/if}}
        {{else}}
        —
        {{/if}}
        </div>

        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize "SMT.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize "SMT.sheet.deleteItem"}}"><i
              class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</section>