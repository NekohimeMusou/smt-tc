<section class="magatama">
  <div class="items-list flexcol">
    <ol class="item-list">
      <li class="item flexrow items-header flex-group-center">
        {{!-- Magatama --}}
        <div class="flex2">{{localize "SMT.itemTypes.magatama"}}</div>
        {{!-- Active? (system.equipped), only one, affects stats --}}
        <div>{{localize "SMT.magatama.active"}}</div>
        {{!-- Ingested? (system.ingested), up to 3 --}}
        <div>{{localize "SMT.magatama.ingested"}}</div>
        {{!-- Stats --}}
        {{#each SMT.stats}}
        <div>{{localize this}}</div>
        {{/each}}
        {{!-- Next Skill --}}
        {{!-- Next Skill Lv --}}
        <div class="item-controls">
          <a class="item-control item-create" title="{{localize "SMT.sheet.newItem"}}" data-item-type="magatama">
            <i class="fas fa-plus"></i> {{localize "SMT.sheet.addItem"}}</a>
        </div>
      </li>

      {{#each magatama}}
      <li class="item item-entry flexrow" data-item-id="{{id}}">
        <a class="item-name flex2">
          <div class="item-image">
            <img src="{{img}}" title="{{name}}" width="24" height="24" />
          </div>
          <div class="item-name">{{name}}</div>
        </a>

        <div class="item-prop">
          <input type="checkbox" class="item-field-toggle" data-field-id="system.equipped" data-dtype="Boolean" {{checked system.equipped}} />
        </div>
        <div class="item-prop">
          <input type="checkbox" class="item-field-toggle" data-field-id="system.ingested" data-dtype="Boolean" {{checked system.ingested}} />
        </div>

        {{#each system.stats}}
        <div class="item-prop">{{#if this}}{{this}}{{else}}0{{/if}}</div>
        {{/each}}
        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize "SMT.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize "SMT.sheet.deleteItem"}}"><i
              class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</section>