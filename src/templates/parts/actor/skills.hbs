<section class="skills">
  <div class="items-list flexcol flexlarge">
    <ol class="item-list">
      <li class="item flexrow items-header">
        <div>#</div>
        {{!-- Skill --}}
        <div class="item-name flex3">{{localize "SMT.itemTypes.skill"}}</div>
        {{!-- Cost or Ammo Count --}}
        <div>{{localize "SMT.itemSheet.cost"}}</div>
        {{!-- TN --}}
        <div>{{localize "SMT.actorSheet.tn"}}</div>
        {{!-- Potency --}}
        <div>{{localize "SMT.itemSheet.potency"}}</div>
        {{!-- Total Power --}}
        <div>{{localize "SMT.itemSheet.power"}}</div>
        {{!-- Target --}}
        <div>{{localize "SMT.itemSheet.target"}}</div>
        {{!-- Element --}}
        <div>{{localize "SMT.itemSheet.affinity"}}</div>
        <div>{{localize "SMT.itemSheet.expended"}}</div>
        {{!-- Type --}}
        <div>{{localize "SMT.skillDetails.type"}}</div>
        <div class="item-controls">
          <a class="item-control item-create" title="{{localize "SMT.sheet.newItem"}}" data-item-type="skill">
            <i class="fas fa-plus"></i> {{localize "SMT.sheet.addItem"}}</a>
        </div>
      </li>

      <li class="item item-entry flexrow flex-group-center flex-between">
        <div class="item-prop">—</div>
        {{!-- Skill --}}
        <a class="item-name flex3 roll-highlight attack-roll" data-power-type="phys" data-power-name="Basic Attack">
          <div class="item-image">
            <img src="icons/skills/melee/unarmed-punch-fist.webp" title="Basic Attack" width="24" height="24" />
          </div>
          {{localize "SMT.skills.basicStrike"}}
        </a>

        {{!-- Cost or Ammo Count --}}
        <div class="item-prop">—</div>

        {{!-- TN --}}
        <div class="item-prop">{{system.tn.phys}}%</div>

        {{!-- Potency --}}
        <div class="item-prop">0</div>

        {{!-- Total Power --}}
        <div class="item-prop">{{system.power.phys}}</div>

        {{!-- Target --}}
        <div class="item-prop">{{localize "SMT.targets.one"}}</div>

        {{!-- Affinity --}}
        <div class="item-prop">{{localize "SMT.affinities.phys"}}</div>

        {{!-- Expended --}}
        <div class="item-prop">—</div>

        {{!-- Type --}}
        <div class="item-prop">{{localize "SMT.attackTypesShort.phys"}}</div>

        {{!-- Item Controls --}}
        <div class="item-controls">
          <a class="item-control" title="{{localize "SMT.sheet.editItem"}}"><i class="fas"></i></a>
          <a class="item-control" title="{{localize "SMT.sheet.deleteItem"}}"><i class="fas"></i></a>
        </div>
      </li>
{{#each skills}}
<li class="item item-entry flexrow flex-group-center flex-between" data-item-id="{{id}}">
  <div class="item-prop">{{incrementKey @key}}</div>
  {{!-- Skill --}}
  <a class="item-name flex3">
    <div class="item-image">
      <img src="{{img}}" title="{{name}}" width="24" height="24" />
    </div>
    {{name}}
  </a>

  {{!-- Cost or Ammo Count --}}
  <div class="item-prop">
    {{#if (or (eq system.attackType "passive") (eq system.attackType "talk"))}}
    —
    {{else}}
    {{localize "SMT.skillDetails.costShort" cost=(ifThen system.cost system.cost "0") resource=(ifThen (eq system.attackType "phys") "HP" "MP")}}
    {{/if}}
  </div>

  {{!-- TN --}}
  <div class="item-prop">{{#unless (or system.auto (eq system.attackType "passive"))}}{{system.tn}}%{{else}}{{ifThen auto (localize "SMT.itemSheet.auto") "—"}}{{/unless}}
  </div>

  {{!-- Potency --}}
  <div class="item-prop">{{#if system.includePowerRoll}}{{system.potency}}{{else}}—{{/if}}</div>

  {{!-- Total Power --}}
  <div class="item-prop">{{#if system.includePowerRoll}}{{system.power}}{{else}}—{{/if}}</div>

  {{!-- Target --}}
  <div class="item-prop">
    {{#unless (eq system.attackType "passive")}}{{localize (concat "SMT.targets." system.target)}}{{else}}—{{/unless}}
  </div>

  {{!-- Affinity --}}
  <div class="item-prop">
    {{#unless (eq system.attackType "passive")}}{{localize (concat "SMT.affinities." system.affinity)}}{{else}}—{{/unless}}
  </div>

  {{!-- Expended --}}
  <div class="item-prop">
    {{#if system.oneShot}}
    <input class="item-field-toggle" type="checkbox" data-field-id="expended" data-dtype="Boolean"
      {{checked system.expended}} {{ifThen system.oneShot "" "disabled"}} />
    {{else}}
    —
    {{/if}}
  </div>

  {{!-- Type --}}
  <div class="item-prop">{{localize (concat "SMT.attackTypesShort." system.attackType)}}</div>

  <div class="item-controls">
    <a class="item-control item-edit" title="{{localize "SMT.sheet.editItem"}}"><i class="fas fa-edit"></i></a>
    <a class="item-control item-delete" title="{{localize "SMT.sheet.deleteItem"}}"><i class="fas fa-trash"></i></a>
  </div>
</li>
{{/each}}
    </ol>
  </div>
</section>