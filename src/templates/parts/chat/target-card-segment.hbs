<h2>{{localize "SMT.itemRoll.targets"}}</h2>
{{#each targets}}
  {{#if ../powerRollRender}}
  <h3>{{localize (concat "SMT.itemRoll.affinityLabel." affinityLevel) name=name}}</h3>
    {{#if ../criticalHit}}
    <p>{{localize (concat "SMT.itemRoll.critTarget." (ifThen isHealing "healing" "damage"))
      resist=finalResist
      type=(localize (concat "SMT.resist." ../damageType))
      damage=damage
      critDamage=critDamage
      }}</p>
    {{else}}
      <p>{{localize (concat "SMT.itemRoll.targetDamage." (ifThen isHealing "healing" "damage"))
        resist=finalResist
        type=(localize (concat "SMT.resist." ../damageType))
        damage=damage
      }}</p>
    {{/if}}
    {{#if fly}}
    <p>{{localize "SMT.itemRoll.targetFlied" name=name}}</p>
    {{/if}}
  {{else}}
    <p>{{name}}</p>
  {{/if}}
  {{#unless @last}}<hr />{{/unless}}
{{/each}}