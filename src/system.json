  "download": "https://github.com/NekohimeMusou/smt-tc/releases/download/v0.6.1/smt-tc-v0.6.1.zip",

  "authors": [
    {
      "name": "Nekohime Musou",
      "url": "https://github.com/NekohimeMusou",
      "discord": "nekohime.musou"
    }
  ],

  "relationships": {
    "recommends": [
      {
        "id": "item-piles",
        "type": "module",
        "reason": "Makes shopping and inventory management vastly more manageable. SMT: Tokyo Conception comes with built-in support."
      }
    ]
  },

  "esmodules": ["module/smt-tc.js"],
  "styles": ["styles/smt-tc.css", "styles/smt-tc-supplemental.css"],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
